@model WiseSwitch.ViewModels.Entities.FirmwareVersion.DisplayFirmwareVersionViewModel

@{
    ViewData["Title"] = $"Firmware Version - {Model.Version}";
}

<h2><partial name="_GoBackFAIcon" /> @Model.Version</h2>
<hr />

<div>
    <!-- List of Switch Models -->
    <h4>Switch Models</h4>
    @if (!Model.SwitchModelsNames.Any())
    {
        <p>This Firmware Version is not registered in any Switch Model in the database.</p>
    }
    else
    {
        <ul>
            @foreach (var item in Model.SwitchModelsNames)
            {
                <li>@item</li>
            }
        </ul>
    }
</div>

<div>
    <hr />
    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fa fa-edit"></i> Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"><i class="fa fa-xmark"></i> Delete</a>
    </div>
</div>
