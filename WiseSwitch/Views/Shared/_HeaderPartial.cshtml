@{
    var userIdentity = User?.Identity;
    bool _isUserAuthenticated = userIdentity?.IsAuthenticated ?? false;
    bool _isUserInRoleAdmin = User?.IsInRole("Admin") ?? false;
    bool _isUserInRoleTechnician = User?.IsInRole("Technician") ?? false;
    string _userName = userIdentity?.Name ?? "error: username not found";
}

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img src="/images/WiseSwitchLogo.png" width="250" height="56"/></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            @if (_isUserAuthenticated)
            {
                <ul class="navbar-nav flex-grow-1">
                    @if (_isUserInRoleAdmin || _isUserInRoleTechnician)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color:black">Switches</a>
                            <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <!-- Switch Models -->
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="SwitchModels" asp-action="Index"><i class="fa fa-sitemap"></i> Switch Models</a>
                                </li>
                                <hr/>
                                <!-- Manufacturers -->
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Manufacturers" asp-action="Index"><i class="fa fa-microchip"></i> Manufacturers</a>
                                </li>
                                <!-- Brands -->
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Brands" asp-action="Index"><i class="fa fa-trademark"></i> Brands</a>
                                </li>
                                <!-- Product Lines -->
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="ProductLines" asp-action="Index"><i class="fa fa-lines-leaning"></i> Product Lines</a>
                                </li>
                                <!-- Product Series -->
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="ProductSeries" asp-action="Index"><i class="fa fa-s"></i> Product Series</a>
                                </li>
                                <!-- Firmware Versions -->
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="FirmwareVersions" asp-action="Index"><i class="fa fa-terminal"></i> Firmware Versions</a>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
                @if (_isUserInRoleAdmin)
                {
                    <ul class="navbar-nav navbar-right">
                        <!-- Users -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="color:black" asp-controller="Users" asp-action="Index"><i class="fa fa-user"></i> Users</a>
                        </li>
                    </ul>
                }
                <ul class="navbar-nav navbar-right">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" style="color:black" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">@_userName</a>
                        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            }
            else
            {
                <ul class="navbar-nav flex-grow-1">
                </ul>
                <ul class="navbar-nav navbar-right">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                    </li>
                </ul>
            }
        </div>
    </div>
</nav>

