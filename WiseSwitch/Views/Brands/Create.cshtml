@model WiseSwitch.Data.Entities.Brand

@{
    ViewData["Title"] = "New brand";
}

<h2><partial name="_GoBackFaIcon" /> New Brand</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            @* ModelState Errors *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Manufacturer -->
            <div class="mb-3">
                <label asp-for="ManufacturerId" class="form-label"></label>
                <input asp-for="ManufacturerId" type="search" list="manufacturers" class="form-control" placeholder="Enter Manufacturer" />
                <datalist id="manufacturers">
                    @if (ViewBag.ComboManufacturers != null)
                        foreach (var item in ViewBag.ComboManufacturers)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                </datalist>
            </div>

            <!-- Name -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <hr />

            <!-- Add -->
            <div class="mb-3">
                <button class="btn btn-primary"><i class="fa fa-save"></i> Add</button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("Scripts/_ValidationScriptsPartial");
    }
}
