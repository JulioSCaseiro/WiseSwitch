@model WiseSwitch.ViewModels.Entities.Brand.CreateBrandViewModel

@{
    ViewData["Title"] = "New brand";
}

<h2><partial name="_GoBackFaIcon" /> New Brand</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            @* ModelState Errors *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Manufacturer -->
            <div class="mb-3">
                <label asp-for="ManufacturerId" class="form-label"></label>
                <select asp-for="ManufacturerId" asp-items="ViewBag.ComboManufacturers" class="form-select">
                        <option disabled selected value="0">Select a Manufacturer</option>
                </select>
                <span asp-validation-for="ManufacturerId" class="text-danger"></span>
            </div>

            <!-- Name -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <hr />

            <!-- Add -->
            <div class="mb-3">
                <button class="btn btn-primary"><i class="fa fa-save"></i> Add</button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("Scripts/_ValidationScriptsPartial");
    }
}
