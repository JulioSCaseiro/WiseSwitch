@model WiseSwitch.ViewModels.Entities.Brand.DisplayBrandViewModel

@{
    ViewData["Title"] = "Delete brand";
}

<h2><partial name="_GoBackFaIcon" /> Delete Brand @Model.Name</h2>

<div>

    @* ModelState Errors - in case delete fails. *@
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <hr />

    @* Check whether this Brand has any Product Line registered in the database. *@
    @if (!Model.ProductLinesNames.Any())
    {
        <p>Are you sure you want to delete this Brand?</p>

        <form asp-action="Delete">
            <button type="submit" value="@Model.Id" class="btn btn-danger">Delete</button>
        </form>
    }
    else
    {
        <p>You can't delete this Brand because it has at least one Product Line registered in the database.</p>
        <ul>
            @foreach (var item in Model.ProductLinesNames)
            {
                <li>@item</li>
            }
        </ul>
    }

</div>
