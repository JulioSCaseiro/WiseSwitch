@model IEnumerable<WiseSwitch.Data.Entities.Manufacturer>

@{
    ViewData["Title"] = "Manufacturers";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-square-plus"></i> New Manufacturer</a>
</p>
<table class="table">
    <thead>
        <tr>
            @* <th><!-- # --></th> *@
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th><!-- actions --></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @* <td>#</td> *@
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-edit"></i></a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
