@model WiseSwitch.ViewModels.Entities.Manufacturer.DisplayManufacturerViewModel

@{
    ViewData["Title"] = "Delete manufacturer";
}

<h2><partial name="_GoBackFaIcon" /> Delete Manufacturer @Model.Name</h2>

<div>
    
    @* ModelState Errors - in case delete fails. *@
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <hr />

    @* Check whether this Manufacturer has any Brands registered in the database. *@
    @if (!Model.BrandsNames.Any())
    {
        <p>Are you sure you want to delete this Manufacturer?</p>

        <form asp-action="Delete">
            <button type="submit" value="@Model.Id" class="btn btn-danger">Delete</button>
        </form>
    }
    else
    {
        <p>You can't delete this Manufacturer because it has at least one Brand registered in the database.</p>
        <ul>
            @foreach (var brandName in Model.BrandsNames)
            {
                <li>@brandName</li>
            }
        </ul>
    }
    
</div>
