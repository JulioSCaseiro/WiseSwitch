@model WiseSwitch.ViewModels.Entities.ProductLine.DisplayProductLineViewModel

@{
    ViewData["Title"] = $"Product Line - {Model.Name}";
}

<h2><partial name="_GoBackFAIcon" /> @Model.Name</h2>
<hr />

<div>
    <h4>Brand</h4>
    <p>@Model.BrandName</p>

    <!-- List of Product Series -->
    <h4>ProductSeries</h4>
    @if (!Model.ProductSeriesNames.Any())
    {
        <p>This Product Line has no Product Series registered in the database.</p>
    }
    else
    {
        <ul>
            @foreach (var item in Model.ProductSeriesNames)
            {
                <li>@item</li>
            }
        </ul>
    }
</div>

<div>
    <hr />
    <div class="form-group">
        <a asp-controller="ProductSeries" asp-action="Create" asp-route-productLineId="@Model.Id" class="btn btn-success"><i class="fa fa-square-plus"></i> New Product Series</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fa fa-edit"></i> Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger @* @(Model.IsDeletable ? " " : " disabled") *@"><i class="fa fa-xmark"></i> Delete</a>
    </div>
</div>
