@model WiseSwitch.ViewModels.Entities.ProductSeries.DisplayProductSeriesViewModel

@{
    ViewData["Title"] = "Delete product series";
}

<h2><partial name="_GoBackFaIcon" /> Delete Product Series</h2>

<div>

    @* ModelState Errors - in case delete fails. *@
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <hr />

    @* Check whether this Product Series has any Switch Model registered in the database. *@
    @if (!Model.SwitchModelsNames.Any())
    {
        <p>Are you sure you want to delete this Product Series?</p>

        <form asp-action="Delete">
            <button type="submit" value="@Model.Id" class="btn btn-danger">Delete</button>
        </form>
    }
    else
    {
        <p>You can't delete this Product Series because it has at least one Switch Model registered in the database.</p>
        <ul>
            @foreach (var item in Model.SwitchModelsNames)
            {
                <li>@item</li>
            }
        </ul>
    }

</div>
