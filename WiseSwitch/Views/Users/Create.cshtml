@model WiseSwitch.ViewModels.Entities.User.UserViewModel

@{
    ViewData["Title"] = "Add user";
}

<h2><partial name="_GoBackFaIcon" /> <i class="fa fa-user"></i> Add User</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            
            @* ModelState Errors *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <!-- Username -->
            <div class="mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" placeholder="Type username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" placeholder="Type password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <!-- Role -->
            <div class="mb-3">
                <label asp-for="Role" class="form-label">Role</label>
                <select asp-for="Role" asp-items="ViewBag.ComboRoles" class="form-control">
                    <option selected disabled>Select role</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            
            <hr />

            <!-- Save -->
            <div class="mb-3">
                <button class="btn btn-primary"><i class="fa fa-user-plus"></i> Add</button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}